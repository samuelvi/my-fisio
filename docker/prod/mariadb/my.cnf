# MariaDB Production Configuration
# This file is mounted to /etc/mysql/conf.d/custom.cnf

[mysqld]
# Character set and collation defaults
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Set default character set for client connections
init-connect = 'SET NAMES utf8mb4'

# Performance optimizations for production
max_connections = 200
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
innodb_flush_log_at_trx_commit = 2
innodb_file_per_table = 1

# Query cache (if beneficial for your use case)
query_cache_type = 1
query_cache_size = 128M
query_cache_limit = 2M

# Slow query log for monitoring
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow-query.log
long_query_time = 2

# Binary logging for backups and replication
log_bin = /var/lib/mysql/mysql-bin
expire_logs_days = 7
max_binlog_size = 100M

[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4
